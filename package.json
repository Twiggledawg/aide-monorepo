{
  "name": "saas-platform",
  "version": "1.0.0",
  "description": "A comprehensive SaaS platform with backend, frontend, mobile, and infrastructure components",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
